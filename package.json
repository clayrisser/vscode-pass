{
  "name": "pass",
  "displayName": "pass",
  "description": "access passwords from the standard unix password manager",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pass.listPasswords",
    "onCommand:pass.showPassword",
    "onCustomEditor:passEdit.gpg"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pass.showPassword",
        "title": "Show Password"
      }
    ],
    "customEditors": [
      {
        "viewType": "passEdit.gpg",
        "displayName": "Pass",
        "selector": [
          {
            "filenamePattern": "**/.password-store/**/*.gpg"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/marked": "^2.0.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "~16.0.0",
    "@types/qs": "^6.9.6",
    "@types/vscode": "^1.57.1",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.30.0",
    "glob": "^7.1.7",
    "mocha": "^9.0.2",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "vscode-test": "^1.5.2",
    "webpack": "^5.42.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@types/which": "^2.0.1",
    "execa": "^5.1.1",
    "marked": "^2.1.3",
    "pass-client": "0.0.3",
    "qs": "^6.10.1",
    "which": "^2.0.2"
  }
}
